<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/burbank_big_condensed_black</item>
    </style>

    <style name="CustomTextTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Button.Primary" parent="Base.TextAppearance.MaterialComponents.Button">
        <item name="android:background">@drawable/shape_rectangle_rounded_corners_filled</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/spacing_large</item>
    </style>

</resources>